<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selected_notes"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/list_items_bg"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/notes_type_icon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/image"
        android:src="@drawable/note_96px" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/selected_notes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="Notes Name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notes_upload_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_notes_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="Date Upload: "
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notes_upload_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_notes_name"
            android:layout_toEndOf="@id/notes_upload_date_text"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="12-01-2020"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/selected_file_size"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:text="999 B"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>