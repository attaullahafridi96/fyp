<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/special</item>
    </style>

    <style name="FingerprintTheme" parent="AppTheme">
        <item name="android:colorForeground">@color/black</item>
    </style>

    <style name="AppCustomTheme">
        <item name="android:background">@drawable/fp</item>
    </style>

    <style name="DrawerMenuTheme">
        <item name="android:colorForeground">@color/black</item>
    </style>

    <style name="MyToolbarTheme" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:colorBackgroundFloating">@color/darkColor</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:editTextColor">@android:color/white</item>
    </style>
</resources>